		<InputModule type="BaseSandbox">
          <sandboxID>Whoo, go sandbox!</sandboxID>
      </InputModule>		
      <InputModule type="InputPurge">
      </InputModule>
      <!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>
</ScaleBox>
