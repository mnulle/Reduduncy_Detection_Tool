<ScaleBox>
	<!-- Dual system -->
	<Adapter type="pcap">
		<name>WAN adapter</name>
		<device>eth3</device>
		<!-- Start the input module chain -->
		<InputModule type="PacketTap">
			<targetModule>RIPPS</targetModule>
			<tapID>External</tapID>
      	</InputModule>		
		<InputModule type="InputPassthrough">
			<targetName>eth2</targetName>
		</InputModule>
      	<!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>

	<Adapter type="pcap">
		<name>LAN adapter</name>
		<device>eth2</device>
		<!-- Start the input module chain -->
		<InputModule type="PacketTap">
			<targetModule>RIPPS</targetModule>
			<tapID>Internal</tapID>			
      	</InputModule>		
		<InputModule type="InputPassthrough">
			<targetName>eth3</targetName>
		</InputModule>
      	<!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>

	<Module type="RIPPS_Monitor">
		<name>RIPPS</name>
		<canSlice>True</canSlice>	
		<numRTTsMeasure>2000</numRTTsMeasure>					
	</Module>	
	
</ScaleBox>
