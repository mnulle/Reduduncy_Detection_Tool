<ScaleBox>
	<!-- First adapter - Does not matter if it is the WAN or LAN side -->
	<Adapter type="pcap">
		<name>eth2</name>
		<device>eth2</device>
		<!-- Start the input module chain -->
		<InputModule type="InputPassthrough">
			<targetName>eth3</targetName>
		</InputModule>
		<!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>
	<!-- Second adapter - Does not matter if it is the WAN or LAN side -->
	<Adapter type="pcap">
		<name>eth3</name>
		<device>eth3</device>
		<!-- Start the input module chain -->		
		<InputModule type="InputPassthrough">
			<targetName>eth2</targetName>
		</InputModule>
		<!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>
</ScaleBox>
