<ScaleBox>
	<!-- Dual system -->
	<Adapter type="pcap">
		<name>Input data adapter</name>
		<device>en1</device>
		<!-- Start the input module chain -->
		<InputModule type="PacketTap">
			<targetModule>TWiCE</targetModule>
			<tapID>WAN</tapID>
      	</InputModule>	
       <InputModule type="InputPurge">
       </InputModule>
       <!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>

	<Module type="TWiCEGateway">
		<name>TWiCE</name>
	</Module>	
	
</ScaleBox>
