<ScaleBox>
   <!-- Device names are for Mac OS X, modify for Linux or Solaris -->
	<!-- First adapter - Does not matter if it is the WAN or LAN side -->
	<Adapter type="pcap">
		<name>en0</name>
		<device>en0</device>
		<!-- Start the input module chain -->
		<InputModule type="InputPassthrough">
			<targetName>en0</targetName>
		</InputModule>
		<!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>
	<!-- Second adapter - Does not matter if it is the WAN or LAN side -->
	<Adapter type="pcap">
		<name>en1</name>
		<device>en1</device>
		<!-- Start the input module chain -->
		<InputModule type="InputPurge">
			<Ethernet>00:16:CB:37:dd:f7</Ethernet>
			<IPv4>192.168.1.200</IPv4>
		</InputModule>		
		<InputModule type="InputPassthrough">
			<targetName>en0</targetName>
		</InputModule>
		<!-- Start the output module chain -->
		<OutputModule type="OutputWrite">
		</OutputModule>
	</Adapter>
</ScaleBox>
